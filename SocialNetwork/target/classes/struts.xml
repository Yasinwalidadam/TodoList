<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" 
"http://struts.apache.org/dtds/s truts-2.0.dtd">
<struts>
	<package name="AccountSystem" extends="struts-default">
	<action name="login" class="com.edi.socialnetwork.action.LoginAction">
		<result name="success">/loginSuccess.jsp</result>
		<result name="input">/index.jsp</result>
	</action>
	<action name="register" class="com.edi.socialnetwork.action.RegisterAction">
		<result name="success">/loginSuccess.jsp</result>
		<result name="input">/register.jsp</result>
	</action>
	</package>
	<package name="FriendSystem" extends="struts-default">
		<action name="addFriend" class="com.edi.socialnetwork.action.AddFriend">
		<result name="success">/loginSuccess.jsp</result> 
		<result name="input">/loginSuccess.jsp</result>
		</action>
	</package>
</struts> 